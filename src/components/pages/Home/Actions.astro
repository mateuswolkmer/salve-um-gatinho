---
import { Button } from "../../Button";
import PageSection from "../../PageSection.astro";

type Props = {};

const {} = Astro.props;

const actions = [
	{
		image: "",
		label: "Adote",
		href: "/gatos",
	},
	{
		image: "",
		label: "Apadrinhe",
		href: "/apadrinhe",
	},
	{
		image: "",
		label: "Ajude",
		href: "/ajude",
	},
];
---
<PageSection>
    <div class="flex flex-col lg:flex-row gap-8 items-center justify-center">
        {actions.map(action => (
            <a href={action.href} class="flex flex-col gap-4 w-full flex-1 items-center group max-w-96">
                <div id="card" class="h-96 w-full bg-yellow-200 border-4 border-black rounded-xl p-4">
					<div class="size-full bg-gray-200 rounded-xl"/>
                </div>
                <Button variant="nav" class="group-hover:-rotate-1">
                    {action.label}
                </Button>
            </a>)
        )}
    </div>
</PageSection>