---
import { Button } from "../../Button";

type Props = {};

const {} = Astro.props;

const actions = [
	{
		image: "",
		label: "Adote",
		href: "/adote",
	},
	{
		image: "",
		label: "Apadrinhe",
		href: "/apadrinhe",
	},
	{
		image: "",
		label: "Ajude",
		href: "/ajude",
	},
];
---
<section class="px-20 py-10">
    <div class="flex flex-col lg:flex-row gap-8 items-center justify-between">
        {actions.map(action => (
            <a href={action.href} class="flex flex-col gap-4 w-full flex-1 items-center group max-w-96">
                <div id="card" class="h-96 w-full bg-yellow-200 border-4 border-black rounded-xl">
                </div>
                <Button variant="nav" class="group-hover:scale-105">
                    <span>{action.label}</span>
                    <span>></span>
                </Button>
            </a>)
        )}
    </div>
</section>