---
type Props = {};

const {} = Astro.props;

// TODO pull from database
const data = {
	helped: 890,
	adopted: 540,
	prepared: 56,
	available: 34,
};
---
<section class="p-section">
    <!-- FIXME add forms in background -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 max-w-5xl m-auto gap-8 text-center w-full">
        <div class="flex flex-col gap-4">
            <h6 class="text-7xl text-shadow-pink">{data.helped}</h6>
            <div class="flex flex-col">
                <span>gatos beneficiados</span>
                <span class="text-lg">*resgatados ou apoiados</span>
            </div>
        </div>
        <div class="flex flex-col gap-4">
            <h6 class="text-7xl text-shadow-blue">{data.adopted}</h6>
            <span>gatos adotados</span>
        </div>
        <div class="flex flex-col gap-4">
            <h6 class="text-7xl text-shadow-yellow">{data.prepared}</h6>
            <span>gatos em tratamento ou socialização</span>
        </div>
        <div class="flex flex-col gap-4">
            <h6 class="text-7xl text-shadow-pink">{data.available}</h6>
            <span>gatos disponíveis para adoção</span>
        </div>
    </div>
</section>