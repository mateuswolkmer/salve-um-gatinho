---
import PageSection from '../../PageSection.astro';

type Props = {};

const {} = Astro.props;
---
<PageSection>
    <div class="flex flex-col gap-10">
        <!-- FIXME think of better header -->
        <p class="text-3xl font-medium text-center">Equipe</p>
        <div class:list={[
            "flex flex-col gap-10 w-full h-[60vh] bg-gray-200 border-4 border-black rounded-xl relative overflow-visible",
            "before:absolute before:inset-0 before:bg-pink before:transform before:-translate-x-6 before:translate-y-6 before:rounded-xl before:-z-10",
            "after:absolute after:inset-0 after:bg-yellow after:transform after:translate-x-6 after:-translate-y-6 after:rounded-xl after:-z-10"
        ]}>
    </div>
</div>
</PageSection>