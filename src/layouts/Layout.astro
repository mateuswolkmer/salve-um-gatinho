---
import { ClientRouter } from "astro:transitions";
import VercelAnalytics from '@vercel/analytics/astro';
import VercelSpeedInsights from '@vercel/speed-insights/astro';
import "../global.css";
import "@fontsource-variable/outfit";
import "@fontsource/staatliches";
import "@phosphor-icons/web/duotone";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SEO } from "astro-seo";
// import { getImagePath } from "astro-opengraph-images";
import HeroImage from "../assets/Outras/hero.jpeg";

interface Props {
  title?: string;
  og?: {
    title?: string;
    description?: string;
    image?: string;
  };
}

const { title, og = {} } = Astro.props;
const { url, site } = Astro;
// const openGraphImageUrl = ogImage || getImagePath({ url, site });

const pageTitle = `Salve ${title ? `- ${title}` : "um Gatinho"}`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Grupo de voluntários da causa animal de Santa Cruz do Sul - RS"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <ClientRouter />
    <!-- https://github.com/heidkaemper/tailwindcss-intersect -->
    <script
      defer
      src="https://unpkg.com/tailwindcss-intersect@2.x.x/dist/observer.min.js"
    ></script>

    <SEO
      openGraph={{
        basic: {
          title: og.title || pageTitle,
          type: "website",
          image: og.image || HeroImage.src,
          url: url,
        },
        optional: {
          description:
            og.description || "Eles merecem uma chance de te fazer feliz",
        },
      }}
    />

    <VercelAnalytics />
    <VercelSpeedInsights />

    <!-- makes sure Umami runs only once
     TODO rewrite this to use the new umami script -->
    <script src="https://cloud.umami.is/script.js" data-website-id="b0ecec58-ff13-4ab2-b41d-1ceac7e8b7b4"></script>
    <script is:inline data-astro-rerun>
      // This inline block will only re-run on client navigations (e.g. with ViewTransitions).
      // On the very first hydration (i.e. on a full page load), we do nothing so that the already
      // loaded external script isn’t loaded a second time.
      if (window.__umamiDidRerun) {
        // On a navigation, remove the previous Umami script and re-add it to trigger a reload.
        const existing = document.querySelector('script[src="https://cloud.umami.is/script.js"]');
        if (existing) existing.remove();
        const script = document.createElement("script");
        script.src = "https://cloud.umami.is/script.js";
        script.async = true;
        script.setAttribute("data-website-id", "b0ecec58-ff13-4ab2-b41d-1ceac7e8b7b4");
        document.head.appendChild(script);
      } else {
        // Initial hydration: mark that the Umami script has been set up, so we skip reloading now.
        window.__umamiDidRerun = true;
      }
    </script>
  </head>
  <body class="font-body bg-page-background">
    <Header />
    <main
      class="min-h-[calc(100vh-theme('height.header')-theme('height.footer'))] overflow-x-hidden"
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
