---
import Accordion from "../components/Accordion.astro";
import PageSection from "../components/PageSection.astro";
import Layout from "../layouts/Layout.astro";
---
<Layout title="Sobre">
	<PageSection class='prose prose-headings:font-normal prose-headings:text-center prose-a:font-body prose-a:font-bold prose-p:text-pretty prose-xl m-auto'>
        <h1>Perguntas e Respostas</h1>
        <div class="bg-pink-100 rounded-xl border-2 border-black p-4 w-full">
            <h2 id="informações-importantes">
                Informações importantes
            </h2>
            <div class="flex flex-col">
                <Accordion title="O que você precisa saber antes de adotar">
                    Adotar...
                </Accordion>
                <Accordion title="O que você precisa saber antes de apadrinhar">
                    Apadrinhar...
                </Accordion>
            </div>
        </div>
    </PageSection>
</Layout>